{
  "name": "make-js-lib",
  "version": "0.0.12",
  "description": "A CLI tool to generate typescript libraries",
  "author": "Simon Lagos <simon.lagos.sallhed@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/",
    "template/"
  ],
  "workspaces": [
    "test-lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/make-js-lib.git"
  },
  "bin": "dist/index.js",
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "ignores": [
      "template"
    ],
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "unicorn/no-process-exit": "off",
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "version": "yarn build",
    "clean": "rm -rf ./test-lib && rm -f make-js-lib.tgz",
    "go": "./build-test.sh",
    "all": "./build-test-all.sh",
    "build": "rm -rf dist && tsc",
    "release": "yarn clean && yarn build && np --no-tests",
    "qa": "yarn tsc && yarn xo --fix"
  },
  "dependencies": {
    "cfonts": "2.9.3",
    "chalk": "4.1.1",
    "commander": "8.0.0",
    "execa": "5.1.1",
    "fs-extra": "10.0.0",
    "listr2": "3.11.0",
    "mustache": "4.2.0",
    "type-fest": "1.2.2"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.12",
    "@types/mustache": "4.1.2",
    "@types/node": "16.4.1",
    "husky": "4.3.8",
    "lint-staged": "11.1.0",
    "np": "7.5.0",
    "package-preview": "^4.0.0",
    "typescript": "4.3.5",
    "xo": "0.42.0"
  }
}
