{
  "name": "make-js-lib",
  "version": "0.1.0",
  "description": "A CLI tool to generate JavaScript libraries",
  "author": "Simon Lagos <simon.lagos.sallhed@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/",
    "template/"
  ],
  "workspaces": [
    "test-lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/make-js-lib.git"
  },
  "bin": "dist/index.js",
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "ignores": [
      "template"
    ],
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "unicorn/prefer-module": "off",
      "unicorn/no-process-exit": "off",
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off"
    }
  },
  "scripts": {
    "version": "npm run build",
    "clean": "rm -rf ./test-lib",
    "go": "./build-test.sh",
    "all": "./build-test-all.sh",
    "build": "rm -rf dist && tsc",
    "release": "npm run clean && npm run build && np --no-tests",
    "qa": "tsc && xo --fix"
  },
  "dependencies": {
    "cfonts": "2.10.0",
    "chalk": "4.1.1",
    "commander": "8.3.0",
    "execa": "5.1.1",
    "fs-extra": "10.0.0",
    "listr2": "3.13.5",
    "mustache": "4.2.0",
    "type-fest": "2.8.0"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/mustache": "4.1.2",
    "@types/node": "17.0.2",
    "np": "7.6.0",
    "package-preview": "^4.0.0",
    "typescript": "4.5.4",
    "xo": "0.47.0"
  }
}
