{
  "name": "make-js-lib",
  "version": "0.0.5",
  "description": "A CLI tool to generate javascript libraries",
  "author": "Simon Lagos <simon.lagos.sallhed@gmail.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/make-js-lib.git"
  },
  "bin": "dist/index.js",
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,md}": [
      "yarn lint",
      "yarn typecheck",
      "yarn format"
    ]
  },
  "scripts": {
    "clean": "rm -rf ./example/test-lib && rm -f make-js-lib.tgz",
    "build-test": "./build-test.sh",
    "build-cli": "./build-cli.sh",
    "build-test-all": "./build-test-all.sh",
    "lint": "eslint src",
    "build": "rm -rf dist && parcel build src/index.js --target node --no-cache",
    "typecheck": "tsc",
    "format": "prettier --write \"src/**/*.js\"",
    "check-all": "yarn lint && yarn typecheck",
    "release": "yarn clean && yarn audit && yarn check-all && yarn build && np --no-tests"
  },
  "dependencies": {
    "chalk": "3.0.0",
    "commander": "4.1.1",
    "cross-spawn": "7.0.1",
    "fs-extra": "8.1.0",
    "mustache": "4.0.0"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "np": "6.2.0",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-shebang": "1.2.8",
    "parcel-plugin-static-files-copy": "2.3.1",
    "prettier": "1.19.1",
    "typescript": "3.8.3"
  }
}
